// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudentUser {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String
  first_name   String
  last_name    String
  phone_number String
  image_url    String
  created_at   DateTime @default(now())
  modified_at  DateTime @default(now())
  course       Course[]
}

model InstructorUser {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String
  first_name   String
  last_name    String
  phone_number String
  image_url    String
  course       Course[]
  created_at   DateTime @default(now())
  modified_at  DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Course {
  id               Int    @id @default(autoincrement())
  name             String
  category         String
  course_desc      String
  course_detail    String
  course_cover_url String
  guide_url        String

  instructor    InstructorUser @relation(fields: [instructor_id], references: [id])
  instructor_id Int
  max_student   Int            @default(-1)
  curr_student  Int            @default(0)

  studentUser StudentUser[]
  courseVideo CourseVideo[]
  assignment  Assignment[]

  created_at  DateTime @default(now())
  modified_at DateTime @default(now())
}

model CourseVideo {
  id        Int    @id @default(autoincrement())
  title     String
  video_url String
  course_id Int
  course    Course @relation(fields: [course_id], references: [id])
}

model Assignment {
  id             Int            @id @default(autoincrement())
  name           String
  description    String
  aj_file_url    String
  homework_files HomeworkFile[]
  max_score      Int
  get_score      Int
  course_id      Int
  course         Course         @relation(fields: [course_id], references: [id])
  created_at     DateTime       @default(now())
  modified_at    DateTime       @default(now())
}

model HomeworkFile {
  id            Int        @id @default(autoincrement())
  student_id    Int
  assignment_id Int
  assignment    Assignment @relation(fields: [assignment_id], references: [id])
  created_at    DateTime   @default(now())
  modified_at   DateTime   @default(now())
}
